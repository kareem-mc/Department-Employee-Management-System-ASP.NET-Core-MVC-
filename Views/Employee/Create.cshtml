
@model Web_mvd.View_Models.EmployeeVM
@inject IDepartmentServices _departmentServices 
@{
    ViewData["Title"] = "Create";
    
   
    var Departments = new SelectList(_departmentServices.GetAllDepartments(), nameof(Department_dto.Id), nameof(Department_dto.Name));
}   


<div class="row justify-content-center">
    <h1 class="col-6 my-4">@ViewData["Title"]</h1>

    <form asp-action="Create" method="post" class="row col-6">
        <partial name="Partials/_CreateEditPartialEM" model="@Model" />

        <label class="form-label" asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="@Departments" class="form-control mb-3">
            <option value="">Choose...</option>
        </select>

        <div class="mt-4">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </form>
</div>

@section ValidateScripts
{
    <partial name="_ValidationScriptsPartial" />
}


